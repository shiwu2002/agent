/* pages/MainInterface/MainInterface.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ededed;
}

/* 无头部导航栏设计 - 消息列表直接开始 */

/* 消息列表 - 无导航栏设计 */
.message-list {
  flex: 1;
  background-color: #f5f5f5; /* 更现代的背景色 */

  box-sizing: border-box;
}

/* 消息容器 - 双容器布局 */
.message-container {
  width: 100%;
  margin-bottom: 40rpx; /* 增加间距，给sender-name留出空间 */
  box-sizing: border-box;
}

/* 对方消息容器（左侧） - 微信风格 */
.message-container-left {
  padding-left: 30rpx;   /* 左边距，给头像空间 */
  padding-right: 100rpx; /* 右边距，防止消息过长 */
  display: flex;
  justify-content: flex-start; /* 左对齐 */
  align-items: flex-start; /* 顶部对齐 */
  min-height: 140rpx; /* 增加最小高度 */
  margin-bottom: 16rpx; /* 增加消息间距，给sender-name留出空间 */
}

/* 我方消息容器（右侧） - 微信风格 */
.message-container-right {
  padding-left: 100rpx;  /* 左边距，防止消息过长 */
  padding-right: 30rpx;  /* 右边距，给头像空间 */
  display: flex;
  justify-content: flex-end; /* 右对齐 */
  align-items: flex-start; /* 顶部对齐，保持与左侧一致 */
  min-height: 140rpx; /* 增加最小高度，保持与左侧一致 */
}

/* 消息包装器 - 微信对称风格 */
.message-wrapper {
  display: flex;
  align-items: flex-start;
  max-width: 85%; /* 微信风格：消息最大宽度约85% */
}

.message-wrapper-left {
  justify-content: flex-start;
  margin-right: auto; /* 确保靠左 */
}

.message-wrapper-right {
  justify-content: flex-end;
  margin-left: auto; /* 确保靠右 */
}

/* 头像 - 微信对称风格 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  border: 2rpx solid #ffffff;
  flex-shrink: 0;
  align-self: flex-start;
}

.avatar-left {
  margin-right: 24rpx; /* 微信风格的间距 */
}

.avatar-right {
  margin-left: 24rpx; /* 微信风格的间距 */
}

/* 消息内容 - 微信对称风格 */
.message-content {
  display: flex;
  flex-direction: column;
  position: relative;
  max-width: calc(100% - 104rpx); /* 微信风格：头像80rpx + 间距24rpx */
  min-height: 125rpx; /* 增加最小高度，让聊天容器更高一些 */
  justify-content: flex-start; /* 顶部对齐，确保sender-name有空间 */
  padding-top: 8rpx; /* 顶部内边距，给sender-name留出空间 */
}

/* 发送者名字 - 优化位置避免被容器隔断 */
.sender-name {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx; /* 增加下边距，确保与消息内容有合适间距 */
  margin-left: 8rpx;
  margin-top: 4rpx; /* 增加上边距，确保不会被挤压 */
  line-height: 1.3; /* 增加行高，提高可读性 */
  position: relative; /* 确保正常文档流 */
  z-index: 10; /* 提高层级，避免被遮挡 */
  flex-shrink: 0; /* 防止被压缩 */
  min-height: 28rpx; /* 确保最小高度，避免显示不全 */
}

.message-content-left {
  align-items: flex-start;
  margin-left: 0;
  padding-left: 0;
}

.message-content-right {
  align-items: flex-end;
  margin-right: 0;
  padding-right: 0;
}

/* 微信风格的时间戳位置（可选） */
.message-container {
  position: relative;
}

.message-content {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}

/* 发送者名字 */
.sender-name {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  margin-left: 8rpx;
  margin-top: -8rpx; /* 向上微调更多，与头像顶部对齐 */
}

/* 文本消息 */
.message-bubble {
  padding: 24rpx 28rpx; /* 增加内边距，让容器看起来更高 */
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 100%;
  transition: all 0.2s ease;
  min-height: 60rpx; /* 增加最小高度 */
}

.message-bubble:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 左侧消息气泡（对方） - 微信对称风格 */
.message-bubble-left {
  background-color: #ffffff;
  border-top-left-radius: 6rpx;
  margin-left: 0;      /* 自然贴边，无需负边距 */
  margin-right: auto;
}

/* 右侧消息气泡（我方） - 微信对称风格 */
.message-bubble-right {
  background-color: #95ec69;
  border-top-right-radius: 6rpx;
  margin-left: auto;
  margin-right: 0;     /* 自然贴边，无需负边距 */
}

.message-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
}

/* 语音消息 - 微信对称风格 */
.voice-bubble {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx; /* 增加内边距，与文本气泡保持一致 */
  border-radius: 20rpx;
  min-width: 120rpx;
  max-width: 400rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  min-height: 60rpx; /* 增加最小高度，与文本气泡保持一致 */
}

.voice-bubble-left {
  background-color: #ffffff;
  border-top-left-radius: 6rpx;
  margin-left: 0;      /* 自然贴边 */
}

.voice-bubble-right {
  background-color: #95ec69;
  border-top-right-radius: 6rpx;
  flex-direction: row-reverse;
  margin-right: 0;     /* 自然贴边 */
}

.voice-bubble:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 16rpx;
}

.voice-duration {
  font-size: 28rpx;
  color: #666666;
  margin: 0 16rpx;
  font-weight: 500;
}

.voice-wave {
  display: flex;
  align-items: center;
  gap: 4rpx;
  margin: 0 16rpx;
}

.wave-bar {
  width: 4rpx;
  height: 20rpx;
  background-color: #07c160;
  border-radius: 2rpx;
  animation: wave 1s ease-in-out infinite;
}

.wave-bar:nth-child(2) {
  animation-delay: 0.2s;
}

.wave-bar:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 100% { height: 20rpx; }
  50% { height: 32rpx; }
}

/* 图片消息 - 微信对称风格 */
.image-bubble {
  padding: 8rpx; /* 稍微增加内边距 */
  border-radius: 20rpx;
  overflow: hidden;
  transition: all 0.2s ease;
  min-height: 60rpx; /* 增加最小高度，保持视觉一致性 */
}

.image-bubble-left {
  background-color: #ffffff;
  border-top-left-radius: 6rpx;
  margin-left: 0;      /* 自然贴边 */
}

.image-bubble-right {
  background-color: #95ec69;
  border-top-right-radius: 6rpx;
  margin-right: 0;     /* 自然贴边 */
}

.message-image {
  width: 240rpx;
  height: 320rpx;
  border-radius: 16rpx;
}

/* 底部输入区域 - 微信风格设计 */
.bottom-area {
  background-color: #ffffff;
  border-top: 1rpx solid #e0e0e0;
}

/* 微信风格输入工具栏 */
.input-toolbar {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx; /* 减少垂直内边距 */
  gap: 12rpx;
  background-color: #f7f7f7;
  min-height: 88rpx; /* 确保工具栏高度一致 */
  box-sizing: border-box;
}

.toolbar-left {
  display: flex;
  align-items: center;
}

.toolbar-right {
  display: flex;
  align-items: center;
  gap: 8rpx; /* 减小按钮间距 */
  margin-left: auto; /* 确保靠右对齐 */
  padding-left: 8rpx;
}

.toolbar-emoji {
  display: flex;
  align-items: center;
  padding-left: 8rpx;
}

/* 微信风格：中间输入区域 */
.input-center-area {
  flex: 1;
  display: flex;
  align-items: center;
  max-width: calc(100% - 140rpx);
}

/* 文本输入模式 */
.text-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 36rpx; /* 统一圆角 */
  border: 1rpx solid #e0e0e0;
  padding: 0 16rpx; /* 移除垂直内边距，保持水平内边距 */
  max-width: 100%; /* 移除宽度限制，让输入框尽可能宽 */
  height: 72rpx; /* 固定高度，与语音按钮完全一致 */
  box-sizing: border-box;
}

/* 更多功能按钮（微信风格：放在输入框左侧） */
.more-functions-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.more-functions-button:active {
  background-color: #f0f0f0;
}

/* 输入框样式 */
.message-textarea {
  flex: 1;
  min-height: 68rpx; /* 稍微增加，确保在72rpx容器中垂直居中 */
  max-height: 180rpx;
  padding: 2rpx 0; /* 减少垂直内边距，确保在72rpx容器中垂直居中 */
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  background-color: transparent;
  line-height: 1.4;
  resize: none;
  width: 100%;
}

.message-textarea:focus {
  outline: none;
}

/* 表情按钮（微信风格：放在最右侧） */
.emoji-button {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s ease;
}

.emoji-button:active {
  background-color: #f0f0f0;
  transform: scale(0.95);
}

/* 右侧工具栏按钮样式 */
.more-functions-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s ease;
}

.more-functions-button:active {
  background-color: #f0f0f0;
  transform: scale(0.95);
}

/* 语音输入模式 */
.voice-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-record-button {
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-radius: 36rpx;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.voice-record-button:active {
  background-color: #f0f0f0;
}

.record-button-text {
  font-size: 30rpx;
  color: #666666;
  line-height: 1.2; /* 调整行高，在72rpx容器中垂直居中 */
}

/* 语音切换按钮 */
.voice-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s ease;
}

.voice-button:active {
  background-color: #f0f0f0;
}

.voice-button.active {
  background-color: #07c160;
  border-color: #07c160;
}

.voice-button.active .toolbar-icon {
  filter: brightness(0) invert(1);
}

.toolbar-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 发送按钮 */
.send-button {
  width: 80rpx;
  height: 56rpx;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 28rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.2s ease;
}

.send-button:active {
  background-color: #06a050;
  transform: scale(0.95);
}

.send-button.disabled {
  background-color: #cccccc;
  color: #ffffff;
}

/* 语音播放动画覆盖层 */
.audio-playing-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.audio-playing-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}

.audio-playing-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 30rpx;
}

.audio-wave-animation {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}

.audio-wave-animation .wave-bar {
  width: 6rpx;
  height: 20rpx;
  background-color: #07c160;
  border-radius: 3rpx;
  margin: 0 4rpx;
  animation: audioWave 1.2s ease-in-out infinite;
}

.audio-wave-animation .wave-bar:nth-child(1) { animation-delay: 0s; }
.audio-wave-animation .wave-bar:nth-child(2) { animation-delay: 0.1s; }
.audio-wave-animation .wave-bar:nth-child(3) { animation-delay: 0.2s; }
.audio-wave-animation .wave-bar:nth-child(4) { animation-delay: 0.3s; }
.audio-wave-animation .wave-bar:nth-child(5) { animation-delay: 0.4s; }

@keyframes audioWave {
  0%, 100% { height: 20rpx; }
  50% { height: 50rpx; }
}

/* 更多功能菜单 - 微信风格 */
.more-menu {
  padding: 24rpx 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e0e0e0;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  transition: all 0.2s ease;
}

.menu-item:active {
  background-color: #e0e0e0;
  transform: scale(0.95);
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 10rpx;
  filter: drop-shadow(0 1rpx 2rpx rgba(0,0,0,0.1));
}

.menu-item:active .menu-icon {
  transform: scale(0.9);
}

.menu-text {
  font-size: 20rpx;
  color: #333333;
  text-align: center;
  line-height: 1.2;
}