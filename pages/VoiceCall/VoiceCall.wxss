.voice-interface {
  max-width: 600px;
  margin: 0 auto;
  padding: 20rpx;
  font-family: Arial, sans-serif;
}

/* 状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}
.status-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.status-indicator.connected {
  background-color: #4caf50;
}
.status-indicator.disconnected {
  background-color: #f44336;
}
.status-text {
  flex: 1;
  margin-right: 16rpx;
  font-size: 28rpx;
}

/* 按钮样式 */
.connect-btn, .disconnect-btn {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  border: none;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: white;
}
.connect-btn {
  background-color: #4caf50;
}
.connect-btn[disabled] {
  background-color: #a5d6a7;
  cursor: not-allowed;
}
.disconnect-btn {
  background-color: #f44336;
}
.disconnect-btn[disabled] {
  background-color: #ef9a9a;
  cursor: not-allowed;
}

.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.record-btn, .stop-btn, .interrupt-btn {
  padding: 24rpx 40rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: white;
  flex: 1;
}
.record-btn {
  background-color: #2196f3;
}
.record-btn[disabled] {
  background-color: #bbdefb;
  cursor: not-allowed;
}
.record-btn.active {
  background-color: #f44336;
  animation: pulse 1.5s infinite;
}
.stop-btn {
  background-color: #ff9800;
}
.stop-btn[disabled] {
  background-color: #ffe0b2;
  cursor: not-allowed;
}
.interrupt-btn {
  background-color: #f44336;
}
.interrupt-btn[disabled] {
  background-color: #ef9a9a;
  cursor: not-allowed;
}

/* 结果展示 */
.recognition-result {
  margin-bottom: 20rpx;
}
.section-title {
  margin-bottom: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.result-box {
  min-height: 160rpx;
  padding: 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  font-size: 36rpx;
  line-height: 1.5;
}

.final-results {
  margin-bottom: 20rpx;
}
.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.clear-btn {
  padding: 10rpx 20rpx;
  background-color: #9e9e9e;
  color: white;
  border: none;
  border-radius: 6rpx;
  font-size: 26rpx;
}
.results-list {
  max-height: 600rpx;
  overflow-y: auto;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
}
.result-item {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
}
.result-item:last-child {
  border-bottom: none;
}
.no-results {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 动画 */
@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 适配小程序 */
@media (max-width: 768px) {
  .voice-interface {
    padding: 20rpx;
  }
  .control-buttons {
    flex-direction: column;
  }
  .record-btn, .stop-btn, .interrupt-btn {
    width: 100%;
    margin-bottom: 20rpx;
  }
  .record-btn:last-child, .stop-btn:last-child, .interrupt-btn:last-child {
    margin-bottom: 0;
  }
  .result-box {
    min-height: 120rpx;
    font-size: 32rpx;
  }
}