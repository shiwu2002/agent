/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 60rpx;
  color: #fff;
}

.title-text {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle-text {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 400;
}

/* 进度指示器 */
.progress-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 50rpx;
  padding: 30rpx 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.step-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.step.completed .step-icon {
  background: #28a745;
  border-color: #28a745;
  color: #fff;
}

.step.current .step-icon {
  background: #fff;
  border-color: #fff;
  color: #667eea;
  animation: pulse 2s infinite;
}

.step.pending .step-icon {
  opacity: 0.5;
}

.step-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.step.completed .step-text {
  opacity: 1;
}

.step-line {
  width: 80rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
  }
  70% {
    transform: scale(1.05);
    box-shadow: 0 0 0 10rpx rgba(255, 255, 255, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
  }
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
  border: 4rpx solid #fff;
}

.userinfo-nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-top: 20rpx;
}

.avatar-wrapper {
  position: relative;
  padding: 0;
  width: 140rpx !important;
  height: 140rpx !important;
  border-radius: 50%;
  margin: 20rpx 0 40rpx 0;
  background: #f8f9fa;
  border: 4rpx dashed #dee2e6;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  overflow: visible;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-wrapper:active {
  border-color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

.avatar {
  display: block;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
}

.avatar-tips {
  position: absolute;
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #6c757d;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 24rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.nickname-wrapper:focus-within {
  border-color: #667eea;
  background-color: rgba(102, 126, 234, 0.05);
}

.nickname-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
}

.nickname-input {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  padding-left: 20rpx;
}

/* 填写提示 */
.fill-tips {
  margin-top: 30rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.tips-text {
  font-size: 26rpx;
  color: #495057;
  line-height: 1.5;
}

/* 完成状态 */
.completed-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-message {
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  background: #d4edda;
  color: #155724;
  border-radius: 20rpx;
  border: 1rpx solid #c3e6cb;
}

.success-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 获取用户信息按钮 */
.get-profile-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.get-profile-btn::after {
  border: none;
}

.version-tips {
  color: #dc3545;
  font-size: 26rpx;
  text-align: center;
  padding: 20rpx;
  background: #f8d7da;
  border-radius: 12rpx;
  border: 1rpx solid #f5c6cb;
}

/* 登录状态样式 */
.login-status {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 50rpx;
  min-width: 300rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  transition: all 0.3s ease;
}

.status-indicator.logged-in {
  background: #28a745;
  animation: pulse-green 2s infinite;
}

.status-indicator.logged-out {
  background: #dc3545;
}

@keyframes pulse-green {
  0% {
    box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.7);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(40, 167, 69, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(40, 167, 69, 0);
  }
}

.status-text {
  font-size: 26rpx;
  font-weight: 500;
}

.status-text.logged-in {
  color: #28a745;
}

.status-text.logged-out {
  color: #dc3545;
}

/* 进入按钮 */
.enter-btn-container {
  margin-top: 40rpx;
}

.enter-btn {
  background: linear-gradient(45deg, #28a745, #20c997);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(40, 167, 69, 0.3);
  transition: all 0.3s ease;
}

.enter-btn::after {
  border: none;
}

.enter-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.4);
}

.usermotto {
  margin-top: auto;
  margin-bottom: 60rpx;
}

.user-motto {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}
