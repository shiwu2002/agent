/* 语音通讯测试页面样式 */
.test-voice-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 状态面板 */
.status-panel {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eee;
}

.status-item:last-child {
  border-bottom: none;
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-value.testing {
  color: #ff9800;
}

.status-value.completed {
  color: #4caf50;
}

/* 测试结果容器 */
.results-container {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  max-height: 400rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.results-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.results-count {
  font-size: 24rpx;
  color: #999;
}

.results-list {
  max-height: 300rpx;
}

.result-item {
  display: flex;
  align-items: flex-start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-time {
  font-size: 20rpx;
  color: #999;
  min-width: 120rpx;
  margin-right: 10rpx;
}

.result-message {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-right: 10rpx;
}

.result-type {
  font-size: 22rpx;
  color: #666;
  min-width: 60rpx;
  text-align: right;
}

/* 结果类型样式 */
.result-item.success .result-message {
  color: #4caf50;
}

.result-item.error .result-message {
  color: #f44336;
}

.result-item.warning .result-message {
  color: #ff9800;
}

.result-item.info .result-message {
  color: #2196f3;
}

.no-results {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #2196f3;
  color: white;
}

.btn-primary:hover {
  background-color: #1976d2;
}

.btn-primary[disabled] {
  background-color: #ccc;
  color: #999;
}

.btn-secondary {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-secondary:hover {
  background-color: #f5f5f5;
}

/* 测试说明 */
.test-info {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-content text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}