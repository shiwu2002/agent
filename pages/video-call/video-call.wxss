/* pages/video-call/video-call.wxss */
.video-call-container {
  height: 100vh;
  position: relative;
  background: #000;
  overflow: hidden;
}

/* 远程视频容器 */
.remote-video-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
}

.remote-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 远程视频遮罩 */
.remote-video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.remote-user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.remote-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.remote-name {
  font-size: 48rpx;
  color: white;
  font-weight: 500;
}

/* 本地视频容器 */
.local-video-container {
  position: absolute;
  top: 100rpx;
  right: 40rpx;
  width: 240rpx;
  height: 320rpx;
  background: #333;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 10;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.local-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 本地视频遮罩 */
.local-video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.local-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  opacity: 0.8;
}

/* 状态栏 */
.status-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 60rpx 40rpx 20rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), transparent);
  z-index: 20;
}

.status-text {
  font-size: 32rpx;
  color: white;
  text-align: center;
}

/* 控制区域 */
.control-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  z-index: 20;
}

.control-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.control-button.active {
  background: #4CAF50;
}

.control-button:active {
  transform: scale(0.95);
}

.control-icon {
  width: 48rpx;
  height: 48rpx;
}

.control-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 挂断按钮 */
.hang-up-row {
  display: flex;
  justify-content: center;
}

.hang-up-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f44336;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.3);
  transition: all 0.3s ease;
}

.hang-up-button:active {
  transform: scale(0.95);
}

.hang-up-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 简化控制界面 */
.simple-controls {
  position: absolute;
  bottom: 100rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 20;
}

.simple-control-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.simple-control-item:active {
  transform: scale(0.95);
}

.simple-control-icon {
  width: 40rpx;
  height: 40rpx;
}

.simple-hang-up {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f44336;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.3);
  transition: all 0.3s ease;
}

.simple-hang-up:active {
  transform: scale(0.95);
}

.simple-hang-up-icon {
  width: 48rpx;
  height: 48rpx;
}