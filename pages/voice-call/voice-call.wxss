/* pages/voice-call/voice-call.wxss */
.voice-call-container {
  height: 100vh;
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  display: flex;
  flex-direction: column;
  color: white;
  position: relative;
}

/* 状态栏 */
.status-bar {
  padding: 20rpx 40rpx;
  text-align: center;
}

.status-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 通话主体 */
.call-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 远程用户信息 */
.remote-user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.remote-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.remote-name {
  font-size: 48rpx;
  font-weight: 500;
  color: white;
}

/* 通话状态图标 */
.call-status-icon {
  margin: 40rpx 0;
  position: relative;
}

/* 连接中动画 */
.connecting-icon {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.pulse-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.pulse-ring:nth-child(2) {
  animation-delay: 0.5s;
}

.pulse-ring:nth-child(3) {
  animation-delay: 1s;
}

@keyframes pulse {
  0% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(2);
    opacity: 0;
  }
}

/* 已连接图标 */
.connected-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.8;
}

/* 通话时长 */
.call-duration {
  margin-top: 20rpx;
}

.duration-text {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

/* 控制区域 */
.control-area {
  padding: 60rpx 40rpx;
  background: rgba(0, 0, 0, 0.2);
}

.control-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.control-button.active {
  background: #4CAF50;
}

.control-button:active {
  transform: scale(0.95);
}

.control-icon {
  width: 48rpx;
  height: 48rpx;
}

.control-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 挂断按钮 */
.hang-up-row {
  display: flex;
  justify-content: center;
}

.hang-up-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f44336;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(244, 67, 54, 0.3);
  transition: all 0.3s ease;
}

.hang-up-button:active {
  transform: scale(0.95);
}

.hang-up-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 简化界面 */
.simple-interface {
  position: absolute;
  bottom: 100rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.simple-info {
  display: flex;
  flex-direction: column;
}

.simple-text {
  font-size: 32rpx;
  color: white;
  margin-bottom: 8rpx;
}

.simple-duration {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.simple-hang-up {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f44336;
  display: flex;
  align-items: center;
  justify-content: center;
}

.simple-hang-up-icon {
  width: 48rpx;
  height: 48rpx;
}